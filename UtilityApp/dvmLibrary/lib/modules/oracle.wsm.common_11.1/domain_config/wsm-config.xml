<?xml version="1.0" encoding="UTF-8"?>
 <!--
                ====================================================================
        -->
        <!--
                This configuration properties file contains bootstrap properties. An OWSM
                agent instance will use these bootstrap connection information
                specified during installation to connect to the OWSM Policy Manager.

                An attribute orares:resource=/{platform}/{domain name} is URI 
                instance associated with the configuration. The default value for this
                attribute is "/", which indicates the entire enterprise.
                Make sure to modify the orares:resource attribute to suit your
                environment.
        -->

        <!--
                ====================================================================
        -->
<orares:properties xmlns:ns3="http://www.w3.org/ns/ws-policy"
	xmlns:ns0="http://schemas.oracle.com/ws/2006/01/policy" xmlns:orares="http://xmlns.oracle.com/wsm/resources"
	orares:type="CONFIGURATION" orares:resource="/">
	<!-- ==================================================================== -->
	<!-- Policy Accessor configuration -->
	<!-- ==================================================================== -->
	<!-- Oracle WSM Policy Manager Application -->
	<!-- Properties are specified using elements similar to the following (with 
		 name attribute replaced by the property name and value attribute replaced 
		 by the properties' value). Category attribute identifies the category of 
		 the property. This is used to group related properties: 
		 OWSM policy accessor will be defined by "pm.url" property value.
		 If "pm.url=t3/iiop://<hostname>:<port>" then accessor is "remote".
		 Specifying an empty value or "auto" enables auto-discovery of Oracle WSM Policy Manager's EJB APIs using non-secure protocol.
		 Specifying the value as "auto-ssl" enables auto-discovery of EJB APIs using secure protocol.
		 Auto-discovery is supported only in WebLogic domains hosting an Oracle WSM Policy Manager instance 
		 or configured to use a service table containing endpoint information for Oracle WSM Policy Manager.
	<orares:property orares:category="ConfigManager"
		orares:name="pm.url">
		<orares:value>{protocol}://{hostname}:{port}</orares:value>
	</orares:property>
	-->
	<!-- CSF key to use to obtain a principal (and its credentials) authorized 
		to access an Oracle WSM Policy Manager instance. -->
	<!-- Here is a sample set for remote Policy Manager
	<orares:property orares:category="ConfigManager"
		orares:name="pm.url">
		<orares:value>{protocol}://{hostname}:{port}</orares:value>
	</orares:property>

	<orares:property orares:category="ConfigManager"
		orares:name="pm.csf.key">
		<orares:value>keystore-csf-key</orares:value>
	</orares:property>
	 -->
</orares:properties>
